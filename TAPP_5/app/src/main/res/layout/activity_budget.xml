<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coms309_29.tapp_5.Budget">



    <TextView
        android:id="@+id/BudgetAsk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BudgetAsks"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:id="@+id/HowManyPeopleFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/BudgetAsk2"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/HowmanyPeeps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/howmanypeople"
            android:textSize="20sp"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/numPeopleSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/HowmanyPeeps"
            >

        </Spinner>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/familyKidsFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/HowManyPeopleFrame">


        <CheckBox
            android:id="@+id/familyCheckbox"
            android:button="@null"
            android:text="@string/areyoufamily"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />



        <CheckBox
            android:id="@+id/kidsCheckbox"
            android:text="@string/kidsThere"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />



    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/HowMuchMoneyFrame"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/familyKidsFrame">

        <TextView
            android:id="@+id/HowmuchMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/howmuchmoney"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/budgetSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HowmuchMoney"
            android:layout_alignParentRight="true">



        </Spinner>




    </RelativeLayout>


    <Button
        android:id="@+id/button_budget"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_next"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />








</RelativeLayout>
