<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coms309_29.tapp_5.Destination">



    <TextView
        android:id="@+id/whereTo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whereTo1"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/whereTo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whereTo2"
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_below="@+id/whereTo1"
        android:layout_centerHorizontal="true" />


    <AutoCompleteTextView
        android:id="@+id/destinCityAutoComp"
        android:layout_below="@+id/whereTo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="And the city to go?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"

         />

    <Button
        android:id="@+id/button_destin"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b_next"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
