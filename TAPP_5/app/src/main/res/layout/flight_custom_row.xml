<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_flight"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/price"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/airline_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Airline name"
        android:textSize="25sp"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon_flight" />

    <TextView
        android:id="@+id/departingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="departingTime"

        android:layout_marginTop="30dp"
        android:layout_below="@+id/airline_name"
        android:layout_toEndOf="@+id/icon_flight" />

    <TextView
        android:id="@+id/origin_city_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="origin"

        android:layout_below="@+id/departingTime"
        android:layout_alignStart="@+id/departingTime" />

    <TextView
        android:id="@+id/arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="arrivalTime"

        android:layout_below="@+id/origin_city_flight"
        android:layout_alignStart="@+id/origin_city_flight" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="destinationcity"
        android:layout_below="@+id/arrival"
        android:layout_alignStart="@+id/arrival" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginEnd="29dp"
        android:layout_below="@+id/airline_name"
        android:layout_alignParentEnd="true" />

</RelativeLayout>